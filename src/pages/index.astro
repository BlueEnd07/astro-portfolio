---
import Nevbar from "../Components/Nevbar.astro";
import Hero from "../Components/Hero.astro";
import Skills from "../Components/Skills.astro";
import PorjectHero from "../Components/ProjectHero.astro";
import Contacts from "../Components/Contacts.astro";
import ResumeButton from "../Components/Resumebutton.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>LokeshRawat.dev</title>
  </head>
  <body class="text-gray-800">
    <Nevbar />
    <!-- Hero portion  -->
    <Hero />
    <!-- download my resume  -->
    <ResumeButton />
    <!-- skills  -->
    <Skills />
    <!-- my projects -->
    <PorjectHero />

    <!-- More about me -->

    <div
      id="about"
      class="items-center flex flex-col justify-center my-10 gap-5"
    >
      <div id="aboutheading" class="text-5xl font-mono font-bold">
        <h1>More About Me</h1>
      </div>
      <div
        id="about-content"
        class="flex justify-center items-center my-5 grow-0 gap-5 text-xl font-bold font-mono"
      >
        <div
          id="about-image"
          class="shrink-0 border-4 border-gray-900 drop-shadow-xl scale-x-[-1] rounded-full w-80 h-80 overflow-hidden"
        >
          <img
            src="/Lokesh.jpeg"
            class="shrink-0 w-full h-auto object-cover scale-125 translate-y-4 transform"
            alt="lokesh image"
          />
        </div>
        <div id="about-para" class="">
          <p class="font-thin w-3/4 text-end">
            👋 Hi, I'm Lokesh Rawat! 🧑‍💼 <br /><br />

            🧠 Passionate about learning and exploring new topics, whether
            related to my field or not. <br /><br />

            🛹 In my free time, I enjoy skateboarding, running, and playing
            badminton. I also love making 3D models and developing games. <br
            /><br />

            📚 When indoors, you'll find me watching movies/Anime <br /><br />

            🐾 Proud pet parent to "Crimsy" . <br /><br />

            Feel free to connect - I'm always open to interesting conversations!
            😊
          </p>
        </div>
      </div>
    </div>

    <!-- contact and socials -->
    <Contacts />
  </body>
</html>
